public class Capitalletters {

	public static void main(String[] args) {
String str="this is your string";
char ch[]=str.toCharArray();
		int i;
		for(i=0;i<str.length();i++)
		{	
			if(i==0 || ch[i-1] == ' ') 
				{
				if(ch[i] >=97 && ch[i] <= 122 ) 
				
					ch[i]=(char)(ch[i]-32);
				}
				
				
		}	
		String st = new String(ch);	
		System.out.println(st);
    }
    }
